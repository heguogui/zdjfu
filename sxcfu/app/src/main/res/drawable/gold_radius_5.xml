<?xml version="1.0" encoding="UTF-8"?>
<!-- 默认底部框颜色值 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
    <shape>
        <solid android:color="@color/gold0"/>
        <corners android:radius="@dimen/dimen_5_dip" /><!--圆角-->
    </shape>
</item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="1dp" android:top="1dp" android:right="1dp" android:left="1dp">
        <shape>
            <solid android:color="@color/gold0" />
            <corners android:radius="@dimen/dimen_5_dip" /><!--圆角-->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</layer-list>