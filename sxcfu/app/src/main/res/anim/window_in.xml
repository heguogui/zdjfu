<?xml version="1.0" encoding="utf-8"?>
<!--启动动画（activity_close.xml）：从顶部开始到底部淡出-->
<!-- 上下滑入式 -->
<set xmlns:android="http://schemas.android.com/apk/res/android" >
    <translate
    android:duration="300"
    android:fromYDelta="100%p"
    android:toYDelta="0"
    />
