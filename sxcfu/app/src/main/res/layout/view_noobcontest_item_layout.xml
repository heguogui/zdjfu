<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white0"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/noobcontest_gold_radius5"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_marginRight="@dimen/dimen_5_dip"
        android:layout_marginLeft="@dimen/dimen_5_dip"
        >

        <ImageView
            android:id="@+id/noobcontest_item_icon"
            android:layout_width="@dimen/dimen_50_dip"
            android:layout_height="@dimen/dimen_50_dip"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:paddingTop="@dimen/dimen_10_dip"
            android:layout_toRightOf="@+id/noobcontest_item_icon"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/noobcontest_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新手注册"
                android:textSize="@dimen/common_text_size14"
                android:textColor="@color/colorBack3"
                />
            <TextView
                android:id="@+id/noobcontest_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成功注册奖励10正经值"
                android:textSize="@dimen/common_text_size12"
                android:textColor="@color/gold6"
                android:layout_marginTop="@dimen/dimen_10_dip"

                />

        </LinearLayout>

        <Button
            android:id="@+id/noobcontest_item_state"
            android:layout_width="@dimen/dimen_70_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:textColor="@color/gold_gray_text"
            android:textSize="@dimen/common_text_size16"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_5_dip"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/noobcontest_item_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/noobcontest_more_title"
        android:textSize="@dimen/common_text_size12"
        android:textColor="@color/gray3"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_5_dip"
        />

</LinearLayout>
