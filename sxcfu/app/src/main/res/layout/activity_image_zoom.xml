<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:indicator="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack3"

    >

    <com.hzkj.com.visitor.utils.image.imagezoom.HackyViewPager
        android:id="@+id/pager_image_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.hzkj.com.visitor.utils.image.imagezoom.HackyViewPager>

    <com.hzkj.com.visitor.utils.image.imagezoom.Xcircleindicator
        android:id="@+id/Xcircleindicator_image_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        indicator:circleInterval="10dp"
        indicator:fillColor="#ffffff"
        indicator:radius="5dp"
        indicator:strokeColor="#cecece" />



</RelativeLayout>
