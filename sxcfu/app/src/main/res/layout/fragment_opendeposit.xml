<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/opendeposit_main_ll"
    android:background="@color/graybg"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dimen_5_dip"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white0"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/openshbankaccount_cardid_detail"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:textSize="@dimen/common_text_size14"
                    android:textColor="@color/gray13"
                    android:background="@color/gray"
                    android:paddingTop="@dimen/dimen_10_dip"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dimen_8_dip"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45_dip"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="@dimen/dimen_80_dip"
                            android:layout_height="match_parent"
                            android:text="@string/openshbankaccount_name"
                            android:textColor="@color/colorBack3"
                            android:textSize="@dimen/common_text_size15"
                            android:gravity="center_vertical"
                            />

                        <EditText
                            android:id="@+id/openshbankaccount_name_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/common_text_size14"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:hint="@string/openshbankaccount_name_hint"
                            android:textColorHint="@color/gray3"
                            android:textCursorDrawable="@null"
                            android:layout_marginLeft="@dimen/dimen_10_dip"
                            android:singleLine="true"

                            />

                    </LinearLayout>

                    <include layout="@layout/view_line_item"></include>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45_dip"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="@dimen/dimen_80_dip"
                            android:layout_height="match_parent"
                            android:text="@string/openshbankaccount_idcard"
                            android:textColor="@color/colorBack3"
                            android:textSize="@dimen/common_text_size15"
                            android:gravity="center_vertical"
                            />

                        <EditText
                            android:id="@+id/opendeposit_cardid_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:textSize="@dimen/common_text_size14"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:hint="@string/openshbankaccount_idcard_hint"
                            android:textCursorDrawable="@null"
                            android:textColorHint="@color/gray3"
                            android:layout_marginLeft="@dimen/dimen_10_dip"
                            android:digits="0123456789xX"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white0"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/openshbankaccount_bankcard_detail"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:textSize="@dimen/common_text_size14"
                    android:textColor="@color/gray13"
                    android:background="@color/gray"
                    android:paddingTop="@dimen/dimen_10_dip"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dimen_8_dip"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45_dip"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="@dimen/dimen_80_dip"
                            android:layout_height="match_parent"
                            android:text="@string/openshbankaccount_bankcard"
                            android:textColor="@color/colorBack3"
                            android:textSize="@dimen/common_text_size15"
                            android:gravity="center_vertical"
                            />

                        <EditText
                            android:id="@+id/opendeposit_bankcard_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/common_text_size14"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:hint="@string/openshbankaccount_bankcard_hint"
                            android:textColorHint="@color/gray3"
                            android:textCursorDrawable="@null"
                            android:inputType="number"
                            android:textColor="@color/colorBack3"
                            android:singleLine="true"
                            android:digits="0123456789"
                            />

                    </LinearLayout>

                    <include layout="@layout/view_line_item"></include>

                    <RelativeLayout
                        android:id="@+id/openshbankaccount_type_rl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45_dip"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            >


                            <TextView
                                android:layout_width="@dimen/dimen_80_dip"
                                android:layout_height="match_parent"
                                android:text="@string/openshbankaccount_type"
                                android:textColor="@color/colorBack3"
                                android:textSize="@dimen/common_text_size15"
                                android:gravity="center_vertical"
                                />

                            <TextView
                                android:id="@+id/opendeposit_type_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/common_text_size14"
                                android:gravity="center_vertical"
                                android:background="@null"
                                android:hint="@string/openshbankaccount_type_hint"
                                android:textColorHint="@color/gray2"
                                android:textColor="@color/colorBack3"
                                />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/next"
                            android:layout_centerVertical="true"
                            />

                    </RelativeLayout>

                    <include layout="@layout/view_line_item"></include>

                    <RelativeLayout
                        android:id="@+id/openshbankaccount_province_rl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45_dip"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            >


                            <TextView
                                android:layout_width="@dimen/dimen_80_dip"
                                android:layout_height="match_parent"
                                android:text="@string/openshbankaccount_province"
                                android:textColor="@color/colorBack3"
                                android:textSize="@dimen/common_text_size15"
                                android:gravity="center_vertical"
                                />

                            <TextView
                                android:id="@+id/opendeposit_province_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/common_text_size14"
                                android:gravity="center_vertical"
                                android:background="@null"
                                android:hint="@string/openshbankaccount_province_hint"
                                android:textColorHint="@color/gray2"
                                android:textColor="@color/colorBack3"
                                />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/next"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>

                </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/openshbankaccount_bankcode"
                        android:paddingLeft="@dimen/dimen_15_dip"
                        android:textSize="@dimen/common_text_size14"
                        android:textColor="@color/gray13"
                        android:background="@color/gray"
                        android:paddingTop="@dimen/dimen_10_dip"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dimen_8_dip"
                        />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45_dip"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="@dimen/dimen_80_dip"
                            android:layout_height="match_parent"
                            android:text="@string/openshbankaccount_phone"
                            android:textColor="@color/colorBack3"
                            android:textSize="@dimen/common_text_size15"
                            android:gravity="center_vertical"
                            />

                        <EditText
                            android:id="@+id/opendeposit_phone_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/common_text_size14"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:paddingBottom="@dimen/dimen_10_dip"
                            android:paddingTop="@dimen/dimen_10_dip"
                            android:hint="@string/openshbankaccount_phone_hint"
                            android:textColorHint="@color/gray3"
                            android:textCursorDrawable="@null"
                            android:inputType="phone"
                            android:textColor="@color/colorBack3"
                            android:maxLength="11"
                            android:singleLine="true"
                            android:digits="0123456789"
                            />

                    </LinearLayout>

                    <include layout="@layout/view_line_item"></include>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45_dip"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"

                            >

                            <TextView
                                android:layout_width="@dimen/dimen_80_dip"
                                android:layout_height="match_parent"
                                android:text="@string/openshbankaccount_code"
                                android:textColor="@color/colorBack3"
                                android:textSize="@dimen/common_text_size15"
                                android:gravity="center_vertical"
                                />

                            <EditText
                                android:id="@+id/opendeposit_code_et"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/common_text_size14"
                                android:gravity="center_vertical"
                                android:background="@null"
                                android:paddingBottom="@dimen/dimen_10_dip"
                                android:paddingTop="@dimen/dimen_10_dip"
                                android:hint="@string/openshbankaccount_code_hint"
                                android:textColorHint="@color/gray3"
                                android:textCursorDrawable="@null"
                                android:inputType="number"
                                android:textColor="@color/colorBack3"
                                android:singleLine="true"
                                android:digits="0123456789"
                                />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/opendeposit_getcode_tv"
                            android:layout_width="@dimen/dimen_80_dip"
                            android:layout_height="match_parent"
                            android:text="获取验证码"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/blue5"
                            android:singleLine="true"
                            />

                        <TextView
                            android:layout_width="@dimen/dimen_1_dip"
                            android:layout_height="@dimen/dimen_10_dip"
                            android:background="@color/gray2"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dimen_85_dip"
                            />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/opendeposit_explain_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/openshbankaccount_explain"
                android:textColor="@color/blue4"
                android:textSize="@dimen/common_text_size12"
                android:layout_marginTop="@dimen/dimen_4_dip"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:paddingBottom="@dimen/dimen_8_dip"
                />


            <Button
                android:id="@+id/opendeposit_next_btn"
                style="@style/login_reigster_btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/common_sure"
                android:enabled="false"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_10_dip"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/notication_iv"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/openshbankaccount_notication_title"
                    android:textColor="@color/colorBack3"
                    android:textSize="@dimen/common_text_size13"
                    android:layout_marginLeft="@dimen/dimen_2_dip"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/openshbankaccount_notication_content"
                android:textColor="@color/gray13"
                android:textSize="@dimen/common_text_size12"
                android:layout_marginTop="@dimen/dimen_7_dip"
                android:layout_marginLeft="@dimen/dimen_14_dip"
                android:layout_marginRight="@dimen/dimen_14_dip"
                />



        </LinearLayout>


    </ScrollView>





</LinearLayout>
