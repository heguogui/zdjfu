<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_260_dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_white_border_white_bg_notpadding">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_marginLeft="@dimen/dimen_20_dip"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:lineSpacingExtra="@dimen/dimen_8_dip"
        android:gravity="center"
        android:textColor="@color/colorBack3"
        android:textSize="@dimen/common_text_size15"
        tools:text="title" />

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/unbind_bank"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/dimen_15_dip"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_iv"
        android:layout_marginLeft="@dimen/dimen_20_dip"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_19_dip"
        android:layout_marginBottom="@dimen/dimen_10_dip"
        android:textColor="@color/colorBack3"
        android:textSize="@dimen/common_text_size15"
        tools:text="content" />


    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/content"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:background="@color/gray1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dip"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorBack3"
            android:textSize="@dimen/common_text_size15" />
    </LinearLayout>
</RelativeLayout>

