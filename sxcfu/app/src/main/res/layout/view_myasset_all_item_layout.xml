<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white0"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:id="@+id/myasset_all_invest_ll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/all_invite"
                    android:layout_marginLeft="@dimen/dimen_20_dip"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    >
                    <TextView
                        android:id="@+id/myasset_all_invest_tv"
                        style="@style/myasset_all_item"
                        android:textSize="@dimen/dimen_15_dip"
                        android:textColor="@color/colorBack3"
                        />
                    <TextView
                        android:text="@string/myasset_all_invest"
                        style="@style/myasset_all_item"
                        android:textSize="@dimen/dimen_12_dip"
                        android:textColor="@color/gray13"
                        android:layout_marginTop="@dimen/dimen_2_dip"
                        />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/myasset_all_earning_ll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_1_dip"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/all_earning"
                    android:layout_marginLeft="@dimen/dimen_20_dip"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/myasset_all_earning_tv"
                            style="@style/myasset_all_item"
                            android:textSize="@dimen/dimen_15_dip"
                            android:textColor="@color/colorBack3"
                            />
                        <TextView
                            android:id="@+id/myasset_all_earning_title_tv"
                            android:text="@string/myasset_all_earning"
                            style="@style/myasset_all_item"
                            android:textSize="@dimen/dimen_12_dip"
                            android:textColor="@color/gray13"
                            android:layout_marginTop="@dimen/dimen_2_dip"
                            />
                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/myasset_all_earning_discounts_ll"
                        android:layout_width="@dimen/dimen_40_dip"
                        android:layout_height="@dimen/dimen_40_dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_5_dip"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/cut"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75_dip"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:id="@+id/myasset_all_rechange_ll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/all_rechange"
                    android:layout_marginLeft="@dimen/dimen_20_dip"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    >
                    <TextView
                        android:id="@+id/myasset_all_rechange_tv"
                        style="@style/myasset_all_item"
                        android:textSize="@dimen/dimen_15_dip"
                        android:textColor="@color/colorBack3"
                        />
                    <TextView
                        android:text="@string/myasset_all_rechange"
                        style="@style/myasset_all_item"
                        android:textSize="@dimen/dimen_12_dip"
                        android:textColor="@color/gray13"
                        android:layout_marginTop="@dimen/dimen_2_dip"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/myasset_all_withdraw_dispost_ll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/all_deposit"
                    android:layout_marginLeft="@dimen/dimen_20_dip"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    >
                    <TextView
                        android:id="@+id/myasset_all_withdraw_dispost_tv"
                        style="@style/myasset_all_item"
                        android:textSize="@dimen/dimen_15_dip"
                        android:textColor="@color/colorBack3"
                        />
                    <TextView
                        android:text="@string/myasset_all_withdraw_dispost"
                        style="@style/myasset_all_item"
                        android:textSize="@dimen/dimen_12_dip"
                        android:textColor="@color/gray13"
                        android:layout_marginTop="@dimen/dimen_2_dip"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_centerVertical="true"
        android:background="@color/gray10"
        />
    <TextView
        android:layout_width="@dimen/dimen_1_dip"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/gray10"
        />


</RelativeLayout>
