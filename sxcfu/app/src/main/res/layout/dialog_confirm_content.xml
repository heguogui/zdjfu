<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exit_layout"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-2dp"
    android:layout_marginRight="-2dp"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBack3"
        android:lineSpacingMultiplier="1.2"
        android:gravity="center_horizontal"
        android:text="开通汇付天下托管账户"
        android:id="@+id/text_title"
        android:paddingTop="20dp"
        android:background="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBack3"
        android:textSize="13dp"
        android:lineSpacingMultiplier = "1.2"
        android:text="退出后，你将收不到新的消\n息.确定要退出？"
        android:background="@drawable/gray_white_color"
        android:id="@+id/text_content"
        android:paddingTop="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical|center_horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:divider="@drawable/divider_line">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="14dp"
            android:textColor="@color/colorBack3"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_confirm_select_left" />

        <Button
            android:id="@+id/btn_OK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="确定"
            android:textSize="14dp"
            android:textColor="@color/red2"
            android:background="@drawable/btn_dialog_confirm_select"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>