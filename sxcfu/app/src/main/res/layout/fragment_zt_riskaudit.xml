<?xml version="1.0" encoding="utf-8"?>
<com.hz.zdjfu.application.widget.view.DragCustInfoScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/product_zt_detail_scrollView"
    android:layout_marginTop="@dimen/dimen_5_dip"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:background="@color/white0"
            >

            <TextView
                android:id="@+id/riskaudit_zt_view1"
                android:layout_width="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_15_dip"
                android:background="@color/green1"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                android:textSize="15sp"
                android:text="财产保障信息"
                />
            <TextView
                android:id="@+id/asset_zt_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:layout_marginTop="@dimen/dimen_24_dip"
                android:textSize="14sp"
                android:layout_below="@+id/riskaudit_zt_view1"
                />

        </RelativeLayout>

        <!--抵押实拍-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:background="@color/white0"
            android:layout_marginTop="@dimen/dimen_5_dip"
            >
            <TextView
                android:id="@+id/riskaudit_zt_view2"
                android:layout_width="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_15_dip"
                android:background="@color/green1"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                android:textSize="15sp"
                android:text="抵押实拍"
                />

            <com.hz.zdjfu.application.widget.view.MyGridView
                android:id="@+id/riskaudit_zt_pledge_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/riskaudit_zt_view2"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:numColumns="2"
                android:layout_marginLeft="@dimen/dimen_17_dip"
                android:layout_marginRight="@dimen/dimen_17_dip"
                >
            </com.hz.zdjfu.application.widget.view.MyGridView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:background="@color/white0"
            android:layout_marginTop="@dimen/dimen_5_dip"
            >
            <TextView
                android:id="@+id/riskaudit_zt_view3"
                android:layout_width="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_15_dip"
                android:background="@color/green1"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                android:textSize="15sp"
                android:text="保障措施"
                />

            <TextView
                android:id="@+id/riskaudit_zt_safeguard_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/riskaudit_zt_view3"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                />

        </RelativeLayout>




    </LinearLayout>



</com.hz.zdjfu.application.widget.view.DragCustInfoScrollView>
