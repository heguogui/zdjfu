<?xml version="1.0" encoding="utf-8"?>
<com.hz.zdjfu.application.widget.view.DragCustInfoScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/product_detail_zt_scrollView"
    android:layout_marginTop="@dimen/dimen_5_dip"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:background="@color/white0"
            >
            <TextView
                android:id="@+id/product_detail_view1"
                android:layout_width="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_15_dip"
                android:background="@color/green1"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                android:textSize="15sp"
                android:text="项目概述"
                />
            <TextView
                android:id="@+id/product_detail_zt_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:layout_marginTop="@dimen/dimen_24_dip"
                android:textSize="14sp"
                android:layout_below="@+id/product_detail_view1"
                />

        </RelativeLayout>

        <!--出借人信息-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:background="@color/white0"
            android:layout_marginTop="@dimen/dimen_5_dip"
            >
            <TextView
                android:id="@+id/product_detail_view2"
                android:layout_width="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_15_dip"
                android:background="@color/green1"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                />
            <TextView
                android:id="@+id/product_detail_zt_loaner_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                android:textSize="15sp"
                android:text="出借人信息"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/product_detail_view2"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:layout_marginTop="@dimen/dimen_24_dip"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/product_detail_zt_loaner_one_tv"
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="姓名:"
                        />
                    <TextView
                        android:id="@+id/product_detail_zt_lender_one"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        android:id="@+id/product_detail_zt_loaner_two_tv"
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="年龄:"
                        />
                    <TextView
                        android:id="@+id/product_detail_zt_lender_two"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        android:id="@+id/product_detail_zt_loaner_three_tv"
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="性别:"
                        />
                    <TextView
                        android:id="@+id/product_detail_zt_lender_three"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        android:id="@+id/product_detail_zt_loaner_four_tv"
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="婚姻状况:"
                        />
                    <TextView
                        android:id="@+id/product_detail_zt_lender_four"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/product_detail_zt_loaner_five_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        android:id="@+id/product_detail_zt_loaner_five_tv"
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="地址:"
                        />
                    <TextView
                        android:id="@+id/product_detail_zt_lender_five"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="证件信息:"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dimen_20_dip"
                        >

                        <com.hz.zdjfu.application.widget.view.MyGridView
                            android:id="@+id/product_detail_zt_loaner_credentials_gv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:numColumns="1"
                            android:horizontalSpacing="@dimen/dimen_5_dip"
                            android:verticalSpacing="@dimen/dimen_5_dip"
                            >
                        </com.hz.zdjfu.application.widget.view.MyGridView>


                    </LinearLayout>


                </LinearLayout>




            </LinearLayout>


        </RelativeLayout>



        <!--借款用途及还款保障-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:background="@color/white0"
            android:layout_marginTop="@dimen/dimen_5_dip"
            >
            <TextView
                android:id="@+id/product_detail_view4"
                android:layout_width="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_15_dip"
                android:background="@color/green1"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                android:textSize="15sp"
                android:text="借款用途及还款保障"
                />

            <TextView
                android:id="@+id/product_detail_zt_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:layout_marginTop="@dimen/dimen_24_dip"
                android:textSize="14sp"
                android:layout_below="@+id/product_detail_view4"
                />


        </RelativeLayout>





    </LinearLayout>



</com.hz.zdjfu.application.widget.view.DragCustInfoScrollView>
