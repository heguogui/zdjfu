<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_15_dip"
    android:layout_marginRight="@dimen/dimen_15_dip"
    >

    <ImageView
        android:id="@+id/rmcalendar_backmoney_detail_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/rmcalendar_backmoney_detail_type_tv"
        android:layout_marginLeft="@dimen/dimen_5_dip"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18_dip"
            android:layout_marginRight="@dimen/dimen_15_dip"
            >

            <TextView
                android:id="@+id/rmcalendar_backmoney_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorBack3"
                />
            <TextView
                android:id="@+id/rmcalendar_backmoney_detail_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#FA6453"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_9_dip"
            android:layout_marginRight="@dimen/dimen_15_dip"
            >

            <TextView
                android:id="@+id/rmcalendar_backmoney_detail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray13"
                />
            <TextView
                android:id="@+id/rmcalendar_backmoney_detail_interst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray13"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15_dip"
            >
            <include layout="@layout/view_line_item"></include>
        </RelativeLayout>




    </LinearLayout>


</RelativeLayout>
