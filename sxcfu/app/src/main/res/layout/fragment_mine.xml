<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48_dip"
                    android:background="@color/blue5"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:id="@+id/mine_head_image_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/mine"
                        android:layout_marginLeft="@dimen/dimen_10_dip"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/mine_phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white0"
                        android:layout_marginLeft="@dimen/dimen_5_dip"
                        android:layout_toRightOf="@+id/mine_head_image_iv"
                        android:layout_centerVertical="true"
                        />


                    <ImageView
                        android:id="@+id/mine_message_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_10_dip"
                        android:background="@mipmap/message_icon"
                        />

                </RelativeLayout>
                <include layout="@layout/view_mine_asset_layout"/>

                <include layout="@layout/view_mine_type_layout"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>





