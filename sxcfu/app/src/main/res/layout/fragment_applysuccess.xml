<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graybg"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white0"
            >

            <LinearLayout
                android:id="@+id/applysuccess_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dimen_35_dip"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_marginBottom="@dimen/dimen_20_dip"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/opened"
                    />
                <TextView
                    android:layout_width="@dimen/dimen_1_dip"
                    android:layout_height="@dimen/dimen_27_dip"
                    android:background="@color/blue5"
                    android:layout_below="@+id/applysuccess_iv"
                    />
                <TextView
                    android:layout_width="@dimen/dimen_1_dip"
                    android:layout_height="@dimen/dimen_27_dip"
                    android:background="@color/gray3"
                    android:layout_below="@+id/applysuccess_iv"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/handling"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_toRightOf="@+id/applysuccess_ll"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="提现申请已提交"
                    android:textSize="15sp"
                    android:textColor="@color/colorBack3"
                    android:layout_marginTop="@dimen/dimen_3_dip"
                    />
                <TextView
                    android:id="@+id/applysuccess_order_ymd_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/gray2"
                    android:layout_marginTop="@dimen/dimen_2_dip"
                    />
                <TextView
                    android:id="@+id/applysuccess_order_hmm_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/gray2"
                    android:layout_marginTop="@dimen/dimen_2_dip"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="申请处理中"
                    android:textSize="15sp"
                    android:textColor="@color/colorBack3"
                    android:layout_marginTop="@dimen/dimen_20_dip"
                    />

            </LinearLayout>


        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100_dip"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_7_dip"
        android:background="@color/white0"
        >
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_14_dip"
                android:gravity="center_vertical"
                android:text="提现金额(元):"
                />
            <TextView
                android:id="@+id/applysuccess_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginRight="@dimen/dimen_11_dip"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/common_text_size14"
                android:textColor="@color/colorBack3"
                />


        </RelativeLayout>
        <include layout="@layout/view_interval_line_item"></include>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_14_dip"
                android:gravity="center_vertical"
                android:text="账户余额(元):"
                />
            <TextView
                android:id="@+id/applysuccess_balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_11_dip"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/common_text_size14"
                android:textColor="@color/colorBack3"
                />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/applysuccess_sure_btn"
        style="@style/login_reigster_btn_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成"
        android:enabled="true"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_55_dip"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size12"
        android:textColor="@color/gray2"
        android:text="实际到账时间以银行为准,一般到账时间不超过24小时(法定节假日除外)"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_marginRight="@dimen/dimen_18_dip"
        android:layout_marginLeft="@dimen/dimen_18_dip"
        />



</LinearLayout>
