<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/ic_guide_pwd_bg"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        >


       <ImageView
           android:id="@+id/fragment_creategesture_top_left"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:textColor="@color/white0"
           android:src="@mipmap/back"
           android:layout_marginLeft="@dimen/dimen_10_dip"
           />

        <TextView
            android:id="@+id/fragment_creategesture_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textColor="@color/white0"
            android:gravity="center"
            android:textSize="@dimen/common_text_size15"
            />

        <TextView
            android:id="@+id/fragment_creategesture_top_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white0"
            android:gravity="center"
            android:textSize="@dimen/common_text_size15"
            android:layout_marginRight="@dimen/dimen_10_dip"
            />


    </RelativeLayout>


    <View
        android:id="@+id/gesturepwd_creat_gap1"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_weight="1.0" />

    <LinearLayout
        android:id="@+id/gesturepwd_setting_preview"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="8dp" >

            <View
                android:id="@+id/gesturepwd_setting_preview_0"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:background="@mipmap/gesture_pattern_min" />

            <View
                android:id="@+id/gesturepwd_setting_preview_1"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:layout_marginLeft="6.0dip"
                android:background="@mipmap/gesture_pattern_min" />

            <View
                android:id="@+id/gesturepwd_setting_preview_2"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:layout_marginLeft="6.0dip"
                android:background="@mipmap/gesture_pattern_min" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="8.0dip"
            android:layout_marginTop="6.0dip" >

            <View
                android:id="@+id/gesturepwd_setting_preview_3"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:background="@mipmap/gesture_pattern_min" />

            <View
                android:id="@+id/gesturepwd_setting_preview_4"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:layout_marginLeft="6.0dip"
                android:background="@mipmap/gesture_pattern_min" />

            <View
                android:id="@+id/gesturepwd_setting_preview_5"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:layout_marginLeft="6.0dip"
                android:background="@mipmap/gesture_pattern_min" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="8.0dip"
            android:layout_marginTop="6.0dip" >

            <View
                android:id="@+id/gesturepwd_setting_preview_6"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:background="@mipmap/gesture_pattern_min" />

            <View
                android:id="@+id/gesturepwd_setting_preview_7"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:layout_marginLeft="6.0dip"
                android:background="@mipmap/gesture_pattern_min" />

            <View
                android:id="@+id/gesturepwd_setting_preview_8"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:layout_marginLeft="6.0dip"
                android:background="@mipmap/gesture_pattern_min" />
        </LinearLayout>
    </LinearLayout>
    "

    <View
        android:id="@+id/gesturepwd_creat_gap2"
        android:layout_width="fill_parent"
        android:layout_height="20.0dip"
        android:layout_weight="1.0" />

    <TextView
        android:id="@+id/gesturepwd_create_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="绘制解锁图案"
        android:textSize="16dp"
        android:textColor="@color/white0" />

    <View
        android:id="@+id/gesturepwd_creat_gap3"
        android:layout_width="fill_parent"
        android:layout_height="8.0dip"
        android:layout_weight="1.0" />

    <com.hz.zdjfu.application.modle.getturepwd.LockPatternView
        android:id="@+id/gesturepwd_create_lockview"
        android:layout_width="288.0dip"
        android:layout_height="288.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10.0dip" />

    <View
        android:id="@+id/gesturepwd_creat_gap4"
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:layout_weight="1.0" />

    <Button
        android:id="@+id/reset_btn"
        style="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:layout_weight="1"
        android:gravity="center"
        android:text="重绘"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/right_btn"
            style="@style/ButtonGreen"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="保存" />
    </LinearLayout>

</LinearLayout>