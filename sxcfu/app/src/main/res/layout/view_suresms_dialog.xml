<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

       <RelativeLayout
           android:layout_width="267dp"
           android:layout_height="@dimen/dimen_267_dip"
           android:background="@android:color/transparent"

           >


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="@dimen/dimen_10_dip"
               android:background="@drawable/stroke_white_solid_white_radius5"
               android:layout_marginRight="@dimen/dimen_10_dip"
               >

               <TextView
                   android:id="@+id/suresms_dialog_title"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="付款认证"
                   android:textSize="15sp"
                   android:textColor="@color/colorBack3"
                   android:layout_marginTop="@dimen/dimen_20_dip"
                   />

               <TextView
                   android:id="@+id/suresms_dialog_phone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:textSize="14sp"
                   android:textColor="@color/colorBack3"
                   android:layout_marginTop="@dimen/dimen_25_dip"
                   android:layout_below="@+id/suresms_dialog_title"
                   android:layout_marginRight="@dimen/dimen_15_dip"
                   android:layout_marginLeft="@dimen/dimen_15_dip"
                   />

                <com.hz.zdjfu.application.widget.view.PasswordInputView
                    android:id="@+id/suresms_dialog_password"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:cursorVisible="false"
                    android:inputType="number"
                    android:maxLength="6"
                    app:pivBorderColor="@color/blue5"
                    app:pivBorderRadius="5dp"
                    app:pivBorderWidth="1dp"
                    app:pivPasswordColor="@color/colorBack3"
                    app:pivPasswordLength="6"
                    app:pivPasswordWidth="6dp"
                    android:layout_below="@+id/suresms_dialog_phone"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_30_dip"
                    android:background="@null"
                    >

                </com.hz.zdjfu.application.widget.view.PasswordInputView>


               <Button
                   android:id="@+id/suresms_dialog_getsms"
                   android:layout_width="@dimen/dimen_125_dip"
                   android:layout_height="@dimen/dimen_30_dip"
                   android:layout_alignParentBottom="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginBottom="@dimen/dimen_33_dip"
                   android:background="@drawable/stroke_blue_solid_blue_radius5"
                   android:text="重新获取"
                   android:textSize="@dimen/common_text_size15"
                   android:textColor="@color/white0"
                   />

           </RelativeLayout>

           <ImageView
               android:id="@+id/suresms_dialog_cancle"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/close"
               android:layout_alignParentRight="true"
               />

       </RelativeLayout>

</RelativeLayout>