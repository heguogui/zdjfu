<?xml version="1.0" encoding="utf-8"?>
<com.hz.zdjfu.application.widget.view.DragCustInfoScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/product_detail_scrollView"
    android:layout_marginTop="@dimen/dimen_5_dip"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:background="@color/white0"
            >
            <TextView
                android:id="@+id/product_detail_view1"
                android:layout_width="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_15_dip"
                android:background="@color/green1"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                android:textSize="15sp"
                android:text="项目概述"
                />
            <TextView
                android:id="@+id/product_detail_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:layout_marginTop="@dimen/dimen_24_dip"
                android:textSize="14sp"
                android:layout_below="@+id/product_detail_view1"
                />

        </RelativeLayout>

        <!--出借人信息-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:background="@color/white0"
            android:layout_marginTop="@dimen/dimen_5_dip"
            >
            <TextView
                android:id="@+id/product_detail_view2"
                android:layout_width="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_15_dip"
                android:background="@color/green1"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                android:textSize="15sp"
                android:text="出借人信息"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/product_detail_view2"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:layout_marginTop="@dimen/dimen_24_dip"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="姓名:"
                        />
                    <TextView
                        android:id="@+id/lender_name"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="年龄:"
                        />
                    <TextView
                        android:id="@+id/lender_age"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="性别:"
                        />
                    <TextView
                        android:id="@+id/lender_sex"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="婚姻状况:"
                        />
                    <TextView
                        android:id="@+id/lender_marry_state"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="地址:"
                        />
                    <TextView
                        android:id="@+id/lender_address"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="证件信息:"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dimen_20_dip"
                        >

                        <ImageView
                            android:id="@+id/lender_credentials_detail_z_iv"
                            android:layout_width="260dp"
                            android:layout_height="150dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_main_advertising_defulat"
                            />
                        <ImageView
                            android:id="@+id/lender_credentials_detail_f_iv"
                            android:layout_width="260dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="@dimen/dimen_5_dip"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_main_advertising_defulat"
                            />

                    </LinearLayout>


                </LinearLayout>




            </LinearLayout>


        </RelativeLayout>


        <!--借款人信息-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:background="@color/white0"
            android:layout_marginTop="@dimen/dimen_5_dip"
            >
            <TextView
                android:id="@+id/product_detail_view3"
                android:layout_width="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_15_dip"
                android:background="@color/green1"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                android:textSize="15sp"
                android:text="借款人信息"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/product_detail_view3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:layout_marginTop="@dimen/dimen_24_dip"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="姓名:"
                        />
                    <TextView
                        android:id="@+id/borrower_name"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="年龄:"
                        />
                    <TextView
                        android:id="@+id/borrower_age"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="性别:"
                        />
                    <TextView
                        android:id="@+id/borrower_sex"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="婚姻状况:"
                        />
                    <TextView
                        android:id="@+id/borrower_marry_state"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="地址:"
                        />
                    <TextView
                        android:id="@+id/borrower_address"
                        style="@style/product_detail_text"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    >
                    <TextView
                        style="@style/product_detail_text_title"
                        android:layout_width="@dimen/dimen_70_dip"
                        android:text="证件信息:"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dimen_20_dip"
                        >

                        <ImageView
                            android:id="@+id/borrower_credentials_detail_z_iv"
                            android:layout_width="260dp"
                            android:layout_height="150dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_main_advertising_defulat"
                            />

                        <ImageView
                            android:id="@+id/borrower_credentials_detail_f_iv"
                            android:layout_width="260dp"
                            android:layout_height="150dp"
                            android:scaleType="fitXY"
                            android:layout_marginTop="@dimen/dimen_5_dip"
                            android:src="@mipmap/ic_main_advertising_defulat"
                            />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


        <!--借款用途及还款保障-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10_dip"
            android:background="@color/white0"
            android:layout_marginTop="@dimen/dimen_5_dip"
            >
            <TextView
                android:id="@+id/product_detail_view4"
                android:layout_width="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_15_dip"
                android:background="@color/green1"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginTop="@dimen/dimen_12_dip"
                android:textSize="15sp"
                android:text="借款用途及还款保障"
                />

            <TextView
                android:id="@+id/product_detail_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_34_dip"
                android:layout_marginRight="@dimen/dimen_17_dip"
                android:layout_marginTop="@dimen/dimen_24_dip"
                android:textSize="14sp"
                android:layout_below="@+id/product_detail_view4"
                />


        </RelativeLayout>





    </LinearLayout>



</com.hz.zdjfu.application.widget.view.DragCustInfoScrollView>
