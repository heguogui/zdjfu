<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graybg"

    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rechange_notication_top"
        android:background="@color/gold10"
        android:textColor="@color/gold9"
        android:textSize="@dimen/common_text_size14"
        android:paddingTop="@dimen/dimen_10_dip"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:gravity="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70_dip"
        android:background="@color/white0">

        <ImageView

            android:id="@+id/rechange_bank_icon"
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rechange_bank_icon"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10_dip"

            >

            <TextView
                android:id="@+id/rechange_bank_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rechange_bank_stipulate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray2"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/dimen_5_dip"
                />


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rechange_account_balance"
            android:textSize="@dimen/dimen_12_dip"
            android:textColor="@color/gray13"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:paddingTop="@dimen/dimen_5_dip"
            android:paddingBottom="@dimen/dimen_5_dip"
            android:layout_marginTop="@dimen/dimen_5_dip"
            />

        <TextView
            android:id="@+id/rechange_account_balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="12sp"
            android:textColor="@color/blue5"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:paddingTop="@dimen/dimen_5_dip"
            android:paddingBottom="@dimen/dimen_5_dip"
            android:layout_marginTop="@dimen/dimen_5_dip"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45_dip"
        android:background="@color/white0"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/rechange_input_amount_title"
            android:textSize="15sp"
            android:textColor="@color/colorBack3"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:gravity="center_vertical"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hz.zdjfu.application.widget.view.EditTextWithClear
                android:id="@+id/rechange_input_amount_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/rechange_input_amount_hint"
                android:textSize="15sp"
                android:textColor="@color/colorBack3"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:gravity="center_vertical|right"
                android:textColorHint="@color/gray13"
                android:background="@null"
                android:paddingRight="@dimen/dimen_10_dip"
                android:digits="0123456789."
                android:inputType="number"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                />

        </RelativeLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/rechange_out_amount_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray3"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_12_dip"
        />

    <Button
        android:id="@+id/rechange_sure_btn"
        style="@style/login_reigster_btn_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rechange_sure_rechange"
        android:enabled="false"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_50_dip"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size16"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rechange_notication_bottom"
        android:textSize="12sp"
        android:textColor="@color/gray3"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:visibility="gone"
        />


</LinearLayout>
