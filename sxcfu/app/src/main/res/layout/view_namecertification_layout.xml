<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white0"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90_dip"
        android:orientation="vertical"
        android:background="@color/white0"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginTop="@dimen/dimen_15_dip"
            >
            <ImageView
                android:id="@+id/bindcard_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/two"
                android:layout_centerInParent="true"
                />


            <TextView
                android:id="@+id/line_left_tv"
                android:layout_width="@dimen/dimen_70_dip"
                android:layout_height="1px"
                android:background="@color/gray1"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/bindcard_iv"
                android:layout_marginRight="@dimen/dimen_15_dip"
                />

            <TextView
                android:id="@+id/line_right_tv"
                android:layout_width="@dimen/dimen_70_dip"
                android:layout_height="1px"
                android:background="@color/gray1"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/bindcard_iv"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                />


            <ImageView
                android:id="@+id/namecertification_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/opened"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/line_left_tv"
                android:layout_marginRight="@dimen/dimen_15_dip"
                />


            <ImageView
                android:id="@+id/settingpwd_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/three"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/line_right_tv"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12_dip"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/namecertification_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/blue5"
                android:textSize="@dimen/common_text_size15"
                android:text="@string/namecertification_namecertification"
                />

            <TextView
                android:id="@+id/bindcard_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:textSize="@dimen/common_text_size15"
                android:text="@string/namecertification_bindcard"
                />


            <TextView
                android:id="@+id/settingpwd_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack3"
                android:textSize="@dimen/common_text_size15"
                android:text="@string/namecertification_settingpwd"
                />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
