<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graybg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white0"
        android:layout_marginTop="@dimen/dimen_7_dip"
        >
        <ImageView
            android:id="@+id/unbindbankcard_icon"
            android:layout_width="@dimen/dimen_28_dip"
            android:layout_height="@dimen/dimen_28_dip"
            android:layout_marginLeft="@dimen/dimen_16_dip"
            />
        <TextView
            android:id="@+id/unbindbankcard_bankname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/common_text_size15"
            android:textColor="@color/colorBack3"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_12_dip"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white0"
        android:layout_marginTop="@dimen/dimen_7_dip"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42_dip"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/unbindbankcard_phone"
                android:textColor="@color/colorBack3"
                android:textSize="@dimen/common_text_size15"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                />
            <EditText
                android:id="@+id/unbindbankcard_phone_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/common_text_size14"
                android:textColor="@color/colorBack3"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_27_dip"
                android:background="@null"
                android:hint="@string/unbindbankcard_phone_hint"
                android:textColorHint="@color/gray3"
                android:inputType="phone"
                android:maxLength="11"
                />

        </LinearLayout>
        <include layout="@layout/view_interval_line_item"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_42_dip"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/unbindbankcard_code"
                    android:textColor="@color/colorBack3"
                    android:textSize="@dimen/common_text_size15"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    />
                <EditText
                    android:id="@+id/unbindbankcard_code_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/common_text_size14"
                    android:textColor="@color/colorBack3"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_27_dip"
                    android:background="@null"
                    android:hint="@string/unbindbankcard_code_hint"
                    android:textColorHint="@color/gray3"
                    android:maxLength="6"
                    android:singleLine="true"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/unbindbankcard_getcode_btn"
                android:layout_width="@dimen/dimen_70_dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_15_dip"
                android:textSize="@dimen/common_text_size12"
                android:textColor="@color/blue5"
                android:gravity="center"
                android:text="获取验证码"
                android:singleLine="true"
                />

            <TextView
                android:layout_width="@dimen/dimen_1_dip"
                android:layout_height="@dimen/dimen_10_dip"
                android:background="@color/gray2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_85_dip"
                />



        </RelativeLayout>

    </LinearLayout>



    <Button
        android:id="@+id/unbindbankcard_submit_btn"
        style="@style/login_reigster_btn_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/common_submint"
        android:enabled="false"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_50_dip"
        android:textColor="@color/white"
        />


</LinearLayout>
